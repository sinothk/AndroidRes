<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <View
        android:id="@+id/noticeView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/transparent"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/titleBarLeft"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:visibility="visible">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_48"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/colorAccent"
                android:padding="@dimen/dp_14"
                android:src="@drawable/res_return_icon"
                android:visibility="visible" />

            <!--<TextView-->
            <!--android:id="@+id/backTv"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_toEndOf="@id/backBtn"-->
            <!--android:layout_toRightOf="@id/backBtn"-->
            <!--android:paddingEnd="@dimen/dp_10"-->
            <!--android:paddingRight="@dimen/dp_10"-->
            <!--android:text="返回"-->
            <!--android:textColor="#FFFFFF"-->
            <!--android:textSize="@dimen/titleBar_back"-->
            <!--android:visibility="gone"-->
            <!--tools:ignore="RtlSymmetry" />-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rightLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/gonnaBtn"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:clickable="true"
                android:padding="@dimen/dp_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/gonnaTxt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:minWidth="@dimen/dp_50"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:text="完成"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_14"
                android:visibility="invisible"
                tools:ignore="ObsoleteLayoutParam" />

        </LinearLayout>

        <TextView
            android:id="@+id/titleBarTxt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="12"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_17"
            android:visibility="visible"
            tools:text="热热热热热热热热热热热热热热热" />
    </RelativeLayout>
</LinearLayout>
